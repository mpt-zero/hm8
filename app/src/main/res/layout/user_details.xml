<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserDetailsActivity">


    <ImageView
        android:id="@+id/userDetailsImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userDetailsName"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_margin="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="100dp"
        android:text="userName"
        android:textSize="28sp"
        app:layout_constraintBottom_toTopOf="@+id/userDetailsLastName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userDetailsImage"
        app:layout_constraintTop_toTopOf="@+id/userDetailsImage" />

    <TextView
        android:id="@+id/userDetailsLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="userLastName"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/userDetailsImage"
        app:layout_constraintTop_toBottomOf="@+id/userDetailsImage" />

    <TextView
        android:id="@+id/detailsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="28dp"
        android:layout_marginTop="32dp"
        android:text="userText"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/userDetailsImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/userDetailsImage"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>